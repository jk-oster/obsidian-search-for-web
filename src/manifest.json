{
  "name": "Obsidian Browser Search",
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["src/content-scripts/content.ts"]
    }
  ],

  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png",
    "512": "icon/icon512.png"
  },

  "{{chrome}}.action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png",
      "512": "icon/icon512.png"
    },
    "default_title": "Pin / Unpin Search Results"
  },
  
  "{{firefox}}.browser_action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png",
      "512": "icon/icon512.png"
    },
    "default_title": "Pin / Unpin Search Results"
  },

  "{{firefox}}.browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "58.0"
    }
  },

  "{{chrome}}.web_accessible_resources": [
    {
      "resources": ["/style.css", "/icon/*"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],

  "{{firefox}}.web_accessible_resources": [
    "style.css",
    "icon/icon16.png", 
    "icon/icon32.png", 
    "icon/icon48.png", 
    "icon/icon128.png", 
    "icon/icon512.png", 
    "icon/logo.svg"
  ],

  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": ["src/background.ts"]
  },

  "permissions": ["tabs", "storage"],
  "options_page": "src/options/options.html"
}
